run = "NLTK_DATA=/home/runner/nltk_data python3 -m uvicorn api.main:app --host 0.0.0.0 --port $PORT"

modules = ["python-3.11"]

[setup]
install = [
  "python3 -m pip install -q -r requirements.txt",
  "python3 -m nltk.downloader -q -d /home/runner/nltk_data wordnet"
]

[deployment]
run = ["sh", "-c", "NLTK_DATA=/home/runner/nltk_data python3 -m uvicorn api.main:app --host 0.0.0.0 --port $PORT"]
healthcheckPath   = "/health"
healthcheckTimeout = 60

[nix]
channel = "stable-24_05"
packages = ["libxcrypt", "rustc", "cargo"] 